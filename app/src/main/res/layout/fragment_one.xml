<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/todayCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#cf0f0f"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Today's outfit"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/outfitsCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#cf6c0f"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Outfits"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/changeWardrobeCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="0"
        android:layout_row="1"
        app:cardBackgroundColor="#cfac0f"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add clothes"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/scheduleCard"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_column="1"
        android:layout_row="1"
        app:cardBackgroundColor="#2ccf0f"
        app:cardCornerRadius="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Schedule"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

</GridLayout>